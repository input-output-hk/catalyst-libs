{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Decision Parameters",
    "type": "array",
    "description": "Parameters that are key decision-making points, defining voting and decision configurations.",
    "items": {
        "type": "object",
        "properties": {
            "parameter": {
                "type": "string",
                "description": "The name or description of the parameter."
            },
            "dataType": {
                "type": "string",
                "description": "The expected data type of the parameter's value.",
                "enum": [
                    "Boolean",
                    "String",
                    "ADA Amount",
                    "ADA Amount (Variable per Challenge/Category)",
                    "Lovelace Amount",
                    "Integer",
                    "Date",
                    "Datetime",
                    "Ratio / Formula",
                    "Percentage",
                    "Currency Amount / String",
                    "String / Rule",
                    "List"
                ]
            },
            "defaultValue": {
                "type": "string",
                "description": "The default value for the parameter, if applicable."
            },
            "isRequired": {
                "type": "boolean",
                "description": "Indicates whether the parameter is mandatory."
            }
        },
        "required": ["parameter", "dataType"]
    },
    "decision_parameters": [{
        "parameter": "Voting period start time",
        "dataType": "Datetime",
        "isRequired": true
    }]
}