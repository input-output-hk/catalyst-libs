{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://raw.githubusercontent.com/input-output-hk/catalyst-libs/main/specs/signed_docs/docs/payload_schemas/decision_parameters.schema.json",
    "title": "Decision Parameters",
    "description": "Schema for defining Catalyst decision parameters (key decision points), with UI/UX metadata and logical grouping.",
    "type": "object",
    "definitions": {
        "datetimeParameter": {
            "type": "string",
            "format": "date-time",
            "title": "Datetime Parameter"
        },
        "listParameter": {
            "type": "array",
            "items": { "type": "string" },
            "title": "List Parameter"
        }
    },
    "properties": {
        "votingPeriodStart": {
            "$ref": "#/definitions/datetimeParameter",
            "title": "Voting period start time"
        },
        "votingOptions": {
            "$ref": "#/definitions/listParameter",
            "title": "Voting options"
        }
    },
    "required": ["votingPeriodStart", "votingOptions"],
    "x-order": ["votingPeriodStart", "votingOptions"]
}